# Market Data System Configuration

# Log Level: debug, info, warning, error, fatal
LOG_LEVEL=info

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_TLS=false

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nbgo
DB_USER=nbgo
DB_PASSWORD=nbgo_password

# Message Bus Configuration
MB_TYPE=zmq
MB_ENDPOINT=tcp://localhost:5555
MB_TIMEOUT=30

# Data Warehouse Configuration
DW_TYPE=clickhouse
DW_HOST=localhost
DW_PORT=8123
DW_NAME=nbgo

# Monitoring Configuration
MON_ENABLED=true
MON_TYPE=grafana
MON_URL=http://localhost:3000

# Gateway Configuration
GW_GATE_ENABLED=true
GW_GATE_KEY=your_api_key
GW_GATE_SECRET=your_api_secret

# Runtime Configuration
RUNTIME_WORKERS=4
RUNTIME_MAX_CONNECTIONS=1000

# Application Configuration
APP_NAME=nbgo
APP_VERSION=1.0.0
APP_ENV=development
